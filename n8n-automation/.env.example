# n8n Configuration
N8N_PORT=5678
N8N_HOST=localhost
N8N_PROTOCOL=http
N8N_ENCRYPTION_KEY=your_encryption_key_here

# Data Storage
N8N_USER_FOLDER=/path/to/.n8n

# Webhook URL (Koyeb or Cloudflare Tunnel)
WEBHOOK_URL=https://your-app.koyeb.app/

# Security
N8N_BASIC_AUTH_ACTIVE=true
N8N_BASIC_AUTH_USER=admin
N8N_BASIC_AUTH_PASSWORD=your_password_here

# Execution
EXECUTIONS_DATA_SAVE_ON_ERROR=all
EXECUTIONS_DATA_SAVE_ON_SUCCESS=all

# Database (optional - PostgreSQL for Koyeb)
# DB_TYPE=postgresdb
# DB_POSTGRESDB_HOST=your_neon_host
# DB_POSTGRESDB_DATABASE=n8n
# DB_POSTGRESDB_USER=your_user
# DB_POSTGRESDB_PASSWORD=your_password
